{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": false,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ESNext",
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "paths": {
            "@domain/*": [
                "src/domain/*"
            ],
            "@application/*": [
                "src/application/*"
            ],
            "@infrastructure/*": [
                "src/infrastructure/*"
            ],
            "@presentation/*": [
                "src/presentation/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}